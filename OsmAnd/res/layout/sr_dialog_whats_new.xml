<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

	<TextView
			android:id="@+id/textViewVersion"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:textColor="#47D1FF"
			android:text="@string/app_name_version"
			android:textAppearance="?android:attr/textAppearanceLarge"/>

	<TextView
			android:id="@+id/textViewWhatsNew"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:textColor="#47D1FF"
			android:text="@string/sr_plugin_whats_new_title"
			android:textAppearance="?android:attr/textAppearanceMedium"/>

	<View
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="#47D1FF"/>

	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_margin="10dp"
			android:fadeScrollbars="false"
			android:scrollbarStyle="outsideInset">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

			<TextView
					android:id="@+id/sr_whats_new_text_view"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/sr_plugin_whats_new_description"
					android:autoLink="web"/>

		</LinearLayout>

	</ScrollView>

	<Button
			android:id="@+id/sr_whats_new_ok_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:text="@string/shared_string_ok"/>

</LinearLayout>